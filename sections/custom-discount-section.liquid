{{ 'custom-discount-section.css' | asset_url | stylesheet_tag }}
{% style %}
  .benefits-section {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin: {{ section.settings.margin_top }}px 0 {{ section.settings.margin_bottom }}px 0;
  }
  
  @media screen and (max-width: 768px){
    .benefit-item {
    margin-bottom:15px;
    width: 48%;
 
  }
  }
  @media screen and (max-width: 468px){
    .benefit-item {
    
    width: 100%;

  }
  }
{% endstyle %}

<div class="benefits-section color-{{ section.settings.parent_box_color_scheme }}">
  {% for block in section.blocks %}
    <div class="benefit-item color-{{ section.settings.menu_box_color_scheme }}">
      {% if block.settings.icon %}
        <img
          src="{{ block.settings.icon | img_url: 'medium' }}"
          width="100%"
          height="100%"
          class="benefit-icon"
          alt="Icon"
        >
      {% endif %}
      <div class="benefit-content">
        <h5>{{ block.settings.title }}</h5>
        <p>{{ block.settings.description }}</p>
      </div>
    </div>
  {% endfor %}
</div>
{% schema %}
{
  "name": "Custom discount Section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "parent_box_color_scheme",
      "label": "Color box",
      "default": "scheme-1"
    },
    {
      "type": "color_scheme",
      "id": "menu_box_color_scheme",
      "label": "Color menu",
      "default": "scheme-2"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Margin Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Free Shipping Worldwide"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Aliquam posuere arcu eget interdum"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
